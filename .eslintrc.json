{
  "parser": "@babel/eslint-parser",
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
  "rules": {
    "indent": ["error", 2],
    "no-console": "off",
    "quotes": ["error", "single"],
    "react/react-in-jsx-scope": "off",
    "semi": ["error", "never"],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "off"
      }
    ]
  }
}
